<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include("../partials/nav") %>  

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input" required>
    <label for="airport-input">Airport:</label>
    <select name="airport" id="airport-input">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <!-- <input type="text" name="airport" id="airport-input" required> -->
    <label for="flightNo-input">Flight Number</label>
    <input type="number" name="flightNo" id="flightNo-input">
    <label for="departs-input">Date</label>
    <input type="datetime-local" name="departs" id="departs-input">
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>  