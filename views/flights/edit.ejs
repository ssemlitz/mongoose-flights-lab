<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include("../partials/nav") %>  

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input" value="<%= flight.airline %>" required>
    <label for="airport-input">Airport:</label>
    <input type="text" name="airport" id="airport-input" value="<%= flight.airport %>" required>
    <label for="flightNo-input">Flight Number</label>
    <input type="number" name="flightNo" value="<%= flight.flightNo %>" id="flightNo-input">
    <label for="departs-input">Date</label>
    <input type="datetime-local" name="departs" value="<%= flight.departs %>" id="departs-input">
    <button type="submit">Save</button>
  </form>
</main>

<%- include("../partials/footer") %>  